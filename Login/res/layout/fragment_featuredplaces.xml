<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bg" >

    <TextView
        android:id="@+id/jsonParsed"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="80dp"
        android:paddingLeft="5dp" />

    <Button
        android:id="@+id/GetServerData"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15dp"
        android:background="@drawable/roundbutton"
        android:drawableTop="@drawable/ic_action_search"
        android:paddingTop="5dp" />

    <EditText
        android:id="@+id/serverText"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_alignBaseline="@+id/jsonParsed"
        android:layout_alignBottom="@+id/jsonParsed"
        android:layout_alignParentLeft="true"
        android:background="@drawable/searchbar"
        android:ems="10"
        android:hint="Enter name,locality or game"
        android:paddingLeft="5dp"
        android:textColor="#ffffff"
        android:textColorHint="#000000"
        android:textSize="23dp"
        android:imeOptions="actionGo" 
        android:inputType="text" >

        <requestFocus />
    </EditText>

</RelativeLayout>