<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/loginbg"
    android:orientation="vertical" >

    <EditText
        android:id="@+id/email"
        android:layout_width="fill_parent"
        android:layout_height="35dp"
        android:layout_below="@+id/sporto"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/box"
        android:hint="Enter your email address"
        android:imeOptions="actionNext"
        android:paddingLeft="5dp"
        android:singleLine="true"
        android:textColor="#000000"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/loginErrorMsg"
        android:layout_width="fill_parent"
        android:layout_height="56dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/passres"
        android:textColor="#000000" />

    <EditText
        android:id="@+id/pword"
        android:layout_width="fill_parent"
        android:layout_height="35dp"
        android:layout_below="@+id/email"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/box"
        android:ems="10"
        android:hint="Enter your password"
        android:imeOptions="actionGo"
        android:inputType="textPassword"
        android:paddingLeft="5dp"
        android:textColor="#000000"
        android:textSize="15dp" />

    <Button
        android:id="@+id/passres"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp"
        android:background="@drawable/custom_button"
        android:text="@string/forgot_password"
        android:textColor="#00bfff"
        android:textSize="13dp" />

    <Button
        android:id="@+id/skip"
        android:layout_width="130dp"
        android:layout_height="35dp"
        android:layout_below="@+id/login"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:background="@drawable/button"
        android:text="Maybe later.."
        android:textColor="#000000"
        android:textSize="13dp" />

    <Button
        android:id="@+id/login"
        android:layout_width="160dp"
        android:layout_height="35dp"
        android:layout_alignLeft="@+id/pword"
        android:layout_below="@+id/pword"
        android:layout_marginTop="35dp"
        android:background="@drawable/button"
        android:paddingRight="10dp"
        android:text="Login"
        android:textColor="#000000"
        android:textSize="13dp" />

    <Button
        android:id="@+id/registerbtn"
        android:layout_width="160dp"
        android:layout_height="35dp"
        android:layout_alignBaseline="@+id/login"
        android:layout_alignBottom="@+id/login"
        android:layout_alignRight="@+id/pword"
        android:background="@drawable/button"
        android:paddingLeft="10dp"
        android:text="Join Now"
        android:textColor="#000000"
        android:textSize="13dp" />

    <View
        android:id="@+id/orbox"
        android:layout_width="70dp"
        android:layout_height="35dp"
        android:layout_alignTop="@+id/registerbtn"
        android:layout_centerHorizontal="true"
        android:background="@drawable/orbox" />

    <TextView
        android:id="@+id/or"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/registerbtn"
        android:layout_alignBottom="@+id/registerbtn"
        android:layout_centerHorizontal="true"
        android:text="OR"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/sporto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp"
        android:text="SPORTO"
        android:textColor="#00bfff"
        android:textSize="30dp"
        android:textStyle="bold"
        android:typeface="sans" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sporto"
        android:layout_centerHorizontal="true"
        android:text="Sporting up your Lives!"
        android:textColor="#000000"
        android:textSize="10dp" />

</RelativeLayout>