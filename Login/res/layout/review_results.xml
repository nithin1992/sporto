<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/emptyFetch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <View
        android:id="@+id/userbox"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/rectangle" />

    <ImageView
        android:id="@+id/person"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignBottom="@+id/userbox"
        android:layout_alignLeft="@+id/userbox"
        android:layout_alignRight="@+id/userbox"
        android:layout_alignTop="@+id/userbox"
        android:src="@drawable/ic_action_person" />

    <TextView
        android:id="@+id/review_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/person"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/person"
        android:text="Dog"
        android:textColor="#000000"
        android:textSize="20dp" />

    <RatingBar
        android:id="@+id/review_ratingBar"
        style="?android:attr/ratingBarStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/review_name"
        android:layout_below="@+id/userbox"
        android:layout_marginTop="2dp" />

    <TextView
        android:id="@+id/review_review"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/review_name"
        android:layout_below="@+id/review_ratingBar"
        android:layout_marginTop="2dp"
        android:text="Locality"
        android:textColor="#808080"
        android:textSize="15dp"
        android:typeface="serif" />

</RelativeLayout>