<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_selector2"
    android:orientation="horizontal"
    android:padding="3dip" >

    <View
        android:id="@+id/myRectanglerating"
        android:layout_width="40dp"
        android:layout_height="25dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/name"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="1dp"
        android:background="@drawable/rectanglerating" />

    <TextView
        android:id="@+id/rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/myRectanglerating"
        android:layout_alignLeft="@+id/myRectanglerating"
        android:layout_alignRight="@+id/myRectanglerating"
        android:layout_alignTop="@+id/myRectanglerating"
        android:paddingLeft="12dp"
        android:paddingTop="2dp"
        android:text="4.5"
        android:textColor="#ffffff"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/locality"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/myRectanglerating"
        android:layout_marginTop="1dp"
        android:text="locality"
        android:textSize="15dp"
        android:textStyle="bold"
        android:typeface="sans" />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="name"
        android:textSize="25dp"
        android:textStyle="bold"
        android:typeface="sans" />

    <View
        android:id="@+id/myRectangledistance"
        android:layout_width="60dp"
        android:layout_height="25dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/rectangle" />

    <TextView
        android:id="@+id/distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="3dp"
        android:layout_marginTop="32dp"
        android:layout_toLeftOf="@+id/km"
        android:text="10"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/km"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="26dp"
        android:layout_marginTop="32dp"
        android:text="Km"
        android:textSize="15dp" />

</RelativeLayout>